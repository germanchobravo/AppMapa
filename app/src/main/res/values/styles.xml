    <style name="AppTheme" parent="@android:style/Theme.Holo.Light" >
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/letra_menu_bottom</item>
        
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:textColor">#ffffff</item>

        <item name="android:actionMenuTextAppearance">@style/ActionBarBottom</item>

    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>



    <style name="DropDownListViewStyle" >
        <item name="android:divider">@color/red</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/blanco</item>

    </style>

    <style name="AppTheme.ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>

        <item name="android:background">@color/actionbar_top</item>
        <item name="android:backgroundSplit" >@color/actionbar_bottom</item>

        <item name="android:text">Probando</item>
        <item name="android:icon">@drawable/ic_portal_actionbar</item>

    </style>

    <style name="ActionBarBottom" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">13dp</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <!-- ActionBar title text -->
    <style name="TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blanco</item>
    </style>



</resources>