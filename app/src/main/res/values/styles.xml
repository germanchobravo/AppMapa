    <style name="AppTheme" parent="@android:style/Theme.Holo.Light" >
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/letra_menu_bottom</item>

        <!--<item name="android:textColor">#ffffff</item>-->

        <!--<item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>-->

        <item name="android:actionMenuTextAppearance">@style/ActionBarBottom</item>

        <item name="segmentedControlButtonStyle">@style/Widget.Holo.SegmentedControl</item>
        <item name="tabControlButtonStyle">@style/Widget.Holo.TabControl</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>-->

        <!--<item name="android:tabWidgetStyle">@style/CustomTabWidget</item>-->

    </style>




    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/texto_gris_filtros</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppTheme.SpinnerStyle">
        <item name="android:background">@drawable/bordes_celda_chevron_right</item>


    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="AppTheme.ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>

        <item name="android:background">@color/actionbar_top</item>
        <item name="android:backgroundSplit" >@color/actionbar_bottom</item>

        <item name="android:text">Probando</item>
        <item name="android:icon">@drawable/ic_portal_actionbar</item>

    </style>

    <style name="ActionBarBottom" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">13dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <!-- ActionBar title text -->
    <style name="TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textview_tituloFiltros" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#019DDA</item>
    </style>

    <style name="AppTheme.TabWidget" >
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10dip</item>
        <item name="android:measureWithLargestChild">true</item>
    </style>

    <style name="DialogListadoPropiedades" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/MyOwnDialogTitle</item>


