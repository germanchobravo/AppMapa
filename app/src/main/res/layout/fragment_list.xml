<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contenedor" android:paddingEnd="10dip" android:padding="5dip"
        android:gravity="bottom|left">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtID"
            android:text="ID"
            android:layout_marginTop="126dp"
            android:textStyle="bold" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDireccion"
            android:text="Direccion"
            android:layout_alignParentStart="true" android:textStyle="bold" android:layout_below="@+id/txtID"
            android:layout_alignParentLeft="true" android:textColor="#ffffffff"/>

</RelativeLayout>